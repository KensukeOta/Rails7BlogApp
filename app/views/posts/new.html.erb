<h1>記事投稿フォーム</h1>

<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br />
    <%= form.text_area :body %>
    <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.hidden_field :user_id, :value => current_user.id %>
  <% @post.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>